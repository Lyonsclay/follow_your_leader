<div class="banner"> <div class="header-photo">
  </div>

  <div class="title-graphics">
    <svg>
      <defs>
        <filter id="blur">
          <feGaussianBlur stdDeviation="1"/>
        </filter>

        <filter id="dropShadow">
          <feGaussianBlur in="SourceAlpha" stdDeviation="3" />
          <feOffset dx="2" dy="4" />
              <feMergeNode in="SourceGraphic" />
          </feMerge>
        </filter>

        <filter id="glow" x="-1" y="-1" width="100" height="100">
          <feGaussianBlur stdDeviation="0 1" result="glow"/>
            <feMerge>
              <feMergeNode in="glow"/>
              <feMergeNode in="dropShadow"/>
            </feMerge>
        </filter>
      </defs>

      <g id="poliwonk" stroke="#c7ccd1" stroke-width="2" stroke-opacity="0.2" filter="url(#glow)">
        <%= render "pw_paths" %>
      </g>
    </svg>
  </div>

  <div class="gradient">
    <svg height="240px">
      <radialGradient id="pw-black" fy="70%">
        <stop offset="0%" stop-color="black" stop-opacity="0.7"/>
        <stop offset="60%" stop-color="black" stop-opacity="0.5"/>
        <stop offset="100%" stop-color="black" stop-opacity="0.2"/>
      </radialGradient>

      <rect width="100%" height="260px" fill="url(#pw-black)"/>
    </svg>
  </div>

  <div class="statement">
    <div id="slogan">
      Massive Online Democracy for the People 
    </div>
  </div>
</div>

