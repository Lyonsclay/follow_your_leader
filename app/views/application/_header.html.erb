<div class="banner"> <div class="header-photo">
  </div>

  <div class="title-graphics">
    <svg>
      <defs>
        <filter id="dropShadow" x="-1%" y="-1%" width="120%" height="120%">
            <feMergeNode in="SourceGraphic"/>
          <feOffset in="SourceAlpha" dx="4" dy="4" result="offset"/>
          <feGaussianBlur in="offset" stdDeviation="4" result="shadow"/>
          <feGaussianBlur in="SourceGraphic" stdDeviation="1" result="blur"/>

          <feMerge>
            <feMergeNode in="shadow"/>
            <feMergeNode in="blur"/>
            <feMergeNode in="SourceGraphic"/>
          </feMerge>
        </filter>

        <filter id="glow" x="-1" y="-1" width="100" height="100">
          <feGaussianBlur stdDeviation="0 1" result="glow"/>
        </filter>
      </defs>

      <g id="poliwonk" stroke="#c7ccd1" stroke-width="2" stroke-opacity="0.2" filter="url(#dropShadow)">
        <%= render "pw_paths" %>
      </g>
    </svg>
  </div>

  <div class="gradient">
    <svg height="240px">
      <radialGradient id="pw-black" fy="70%">
        <stop offset="0%" stop-color="black" stop-opacity="0.7"/>
        <stop offset="60%" stop-color="black" stop-opacity="0.5"/>
        <stop offset="100%" stop-color="black" stop-opacity="0.2"/>
      </radialGradient>

      <rect width="100%" height="260px" fill="url(#pw-black)"/>
    </svg>
  </div>

  <div class="statement">
    <div id="slogan">
      Massive Online Democracy for the People
    </div>
  </div>
</div>

