<svg>
  <defs>
    <radialGradient id="pw-black">
      <stop offset="0%" stop-color="black" stop-opacity="1.0"/>
      <stop offset="70%" stop-color="black" stop-opacity="0.7"/>
      <stop offset="100%" stop-color="#104e8b" stop-opacity="1.0"/>
    </radialGradient>

    <filter id="blur">
      <feGaussianBlur stdDeviation="5" />
    </filter>

    <mask id="pw-title">
      <rect id="alpha" x="0" y="0" width="100%" height="100%"/>

      <svg id="poliwonk" x="33%" y="20%">
        <g stroke="red" stroke-width="8" stroke-opacity="0.3">
          <%= render "pw_paths" %>
        </g>
      </svg>
    </mask>
  </defs>

  <rect id="base" x="0" y="0" width="100%" height="100%"/>
</svg>
